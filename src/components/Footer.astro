---
import { content } from "../scripts/content"
import phoneSvg from "../images/icons/phone-footer.svg"

const ctn = content.info
const date = new Date()
const year = date.getFullYear()
---

<footer class="text-white py-[32px]">
  <div class="footer">
    <div class="footer-row justify-between">
      <nav class="flex flex-row items-center gap-[24px]">
        <span><a href={ctn.nav.solutions.link}>{ctn.nav.solutions.title}</a></span>
        <span><a href={ctn.nav.about.link}>{ctn.nav.about.title}</a></span>
        <span><a href={ctn.nav.contacts.link}>{ctn.nav.contacts.title}</a></span>
      </nav>
      <div class="address">
        <div><a href={ctn.addressLink}>{ctn.address}</a></div>
      </div>
      <div class="flex flex-row items-center">
        <div class="mr-[8px]"><img src={phoneSvg.src} alt="phone"/></div>
        <span class="text-[16px] font-medium "><a href= {ctn.tel.number}>{ctn.tel.title}</a></span>
      </div>
    </div>
    <div class="footer-row justify-center">
      <div class="address lg:pl-[100px]">{year} {ctn.copyright}</div>
    </div>
  </div>
</footer>


<style lang="scss">
  .footer {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: flex-start;
    gap: 32px;
    &-row {
      width: 100%;
      display: flex;
      flex-direction: column;
      gap: 12px;
      align-items: start;
      @include media('>=desktop') {
        flex-direction: row;
        align-items: center;
      }
    }
    @include media('<=1100px') {
      font-size: 16px;
    }
  }
  .address {
    color: #FFFFFF8F
  }
</style>
