---
import { content } from '../scripts/content';
import phoneSvg from '../images/icons/phone-footer.svg';

const ctn = content.info;
const date = new Date();
const year = date.getFullYear();
---

<footer class="py-[32px] text-white">
  <div class="footer">
    <div class="footer-row justify-between">
      <nav class="flex flex-row items-center gap-[24px]">
        <span><a href={ctn.nav.solutions.linkPage}>{ctn.nav.solutions.title}</a></span>
        <span><a href={ctn.nav.about.linkPage}>{ctn.nav.about.title}</a></span>
        <span><a href={ctn.nav.contacts.linkPage}>{ctn.nav.contacts.title}</a></span>
      </nav>
      <div class="address">
        <div><a href={ctn.addressLink}>{ctn.address}</a></div>
      </div>
      <div class="flex flex-row items-center">
        <div class="mr-[8px]"><img src={phoneSvg.src} alt="phone" /></div>
        <span class="text-[16px] font-medium"><a href={ctn.tel.number}>{ctn.tel.title}</a></span>
      </div>
    </div>
    <div class="footer-row justify-center">
      <div class="address lg:pl-[100px]">{year} {ctn.copyright}</div>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 32px;
    &-row {
      display: flex;
      flex-direction: column;
      align-items: start;
      width: 100%;
      gap: 12px;
      @include media('>=desktop') {
        flex-direction: row;
        align-items: center;
      }
    }
    @include media('<=1100px') {
      font-size: 16px;
    }
  }
  .address {
    color: #ffffff8f;
  }
</style>
