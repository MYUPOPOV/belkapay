---
import { content } from '../scripts/content';
import Block from './AboutBlock.astro';

const ctn = content.banks;
---

<section id="about" class="mt-[96px]">
  <div class="title-main">{ctn.title}</div>
  <div class="font-semibold mt-[24px]">{ctn.text}</div>

  <div class="mt-[32px] md:mt-[48px] border">
    {
      ctn.list.map(({ number, title, textArr }, index, arr) => (
        <Block number={number} title={title} textArr={textArr} isLast={index === arr.length - 1} />
      ))
    }
  </div>
</section>

<style lang="scss">
  .border {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding: 32px;
    gap: 32px;
    border: 1px solid #cad2e1;
    border-radius: 16px;
  }
</style>
