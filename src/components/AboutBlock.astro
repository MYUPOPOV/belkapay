---
interface Props {
  number: string;
  title: string;
  textArr: Array<string>;
  isLast: boolean;
}

const { number, title, textArr, isLast } = Astro.props;
---

<div class="block" data-aos="fade-up">
  <div class="title">
    <span class="title-number">{number}</span>
    <span class="title-text">{title}</span>
  </div>
  {
    textArr.length < 5 && (
      <div class="text">
        {textArr.map((item) => (
          <p>{item}</p>
        ))}
      </div>
    )
  }
  {
    textArr.length >= 5 && (
      <ul class="text">
        {textArr.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    )
  }
</div>
{!isLast && <div class="line" />}

<style lang="scss">
  .block {
    display: grid;
    grid-template-columns: 1fr;
    width: 100%;
    gap: 24px;
    @include media('>=desktop') {
      grid-template-columns: 1fr 1fr;
      gap: 32px;
    }
  }
  .title {
    display: flex;
    gap: 16px;
  }
  .title-number {
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
  }
  .title-text {
    font-weight: 800;
    font-size: 24px;
    line-height: 28px;
  }
  .text {
    display: grid;
    grid-template-columns: 1fr;
    gap: 16px;
  }
  .line {
    width: 100%;
    height: 1px;
    background: #cad2e1;
  }
  li {
    margin-left: 20px;
  }
</style>
