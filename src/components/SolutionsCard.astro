---
import { content } from '../scripts/content';
import { Picture } from 'astro:assets';

interface Props {
  title: string;
  text: string;
  list: Array<string>;
  image: any;
}

const { title, text, list, image } = Astro.props;
const pictureAlt = content.info.image + ': ' + title;
---

<div class="card">
  <div class="image">
    <Picture src={image} formats={['avif', 'webp']} alt={pictureAlt} class="m-auto" width="320" densities={[1.5, 2]} />
  </div>
  <div class="title">{title}</div>
  <div class="my-[16px]">{text}</div>
  <ul class="list">
    {list.map((item) => <li class="item">{item}</li>)}
  </ul>
</div>

<style lang="scss">
  .card {
    flex: 0 0 30%;
    width: 100%;
    min-height: 596px;
    padding: 16px;
    border-radius: 16px;
    background: #fff;
  }
  .image {
    display: flex;
    flex-direction: column;
    align-items: center;
    align-self: stretch;
    justify-content: center;
    height: 300px;
    padding: 8px;
    gap: 10px;
    border-radius: 8px;
    background: #eff1f4;
  }
  .title {
    margin-top: 24px;
    font-weight: 800;
    font-size: 24px;
    line-height: 28px;
  }
  .list {
    padding-left: 20px;
    color: #8291ae;
    font-size: 14px;
    line-height: 20px;
  }
</style>
