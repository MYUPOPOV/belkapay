---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ContactsOnly from '../components/ContactsOnly.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="BelkaPay">
  <div class="wrapper">
    <Header isMultiPage={true} />
    <main>
      <ContactsOnly isIndexPage={false} />
      <div id="empty" class="mt-[92px]"></div>
    </main>
  </div>
  <div class="footer">
    <div class="wrapper">
      <Footer isMultiPage={true} />
    </div>
  </div>
</Layout>

<style lang="scss">
  .wrapper {
    @include pageContent;
  }
  .contacts {
    width: 100%;
    background-color: #ffffff;
  }
  .footer {
    width: 100%;
    background-color: #292929;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const empty = document.getElementById('empty');
    const clientHeight = document.documentElement.clientHeight;
    if (clientHeight > 760) {
      empty!.style.height = `${document.documentElement.clientHeight - 760}px`
    } else if (clientHeight > 600 &&  clientHeight <= 760) {
      empty!.style.marginTop = `${clientHeight - 660}px`
    }
  });
</script>