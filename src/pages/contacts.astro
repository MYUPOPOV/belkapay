---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ContactsOnly from '../components/ContactsOnly.astro';
import About from '../components/About.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="BelkaPay">
  <div class="wrapper">
    <Header isMultiPage={true} />
    <main>
      <ContactsOnly />
      <About isIndexPage={true} />
      <div class="mt-[92px]"></div>
    </main>
  </div>
  <div class="footer">
    <div class="wrapper">
      <Footer isMultiPage={true} />
    </div>
  </div>
</Layout>

<style lang="scss">
  .wrapper {
    @include pageContent;
  }
  .contacts {
    width: 100%;
    background-color: #ffffff;
  }
  .footer {
    width: 100%;
    background-color: #292929;
  }

</style>
